<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.mitchellolsthoorn.testgenie</id>
    <name>TestGenie</name>
    <vendor>mitchellolsthoorn</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.mitchellolsthoorn.testgenie.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.mitchellolsthoorn.testgenie.services.MyProjectService"/>
        <toolWindow id="TestGenie" secondary="true" anchor="right"
                    factoryClass="com.github.mitchellolsthoorn.testgenie.toolwindow.TestGenieToolWindowFactory"/> <!-- icon="AllIcons.General.Modified"-->
    </extensions>

    <actions>
        <group id="TestGenie.TestGenieActions" text="TestGenie" description="Actions related to TestGenie" popup="true">
            <add-to-group group-id="CodeMenu" anchor="after" relative-to-action="Generate"/>
            <action class="com.github.mitchellolsthoorn.testgenie.actions.GenerateTestsAction"
                    id="TestGenie.TestGenieActions.GenerateTestsAction"
                    text="Generate Tests"
                    description="Press to generate tests using the best test generating software TestGenie">
                <keyboard-shortcut first-keystroke="control alt shift G" second-keystroke="T" keymap="$default"/>
            </action>
        </group>

        <group id="TestGenie.Actions.TestGenerateTestsForClassActionGroup"
               text="Generate Tests for Class"
               description="Generate tests for all methods in the selected class">

            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="RefactoringMenu"/>
            <add-to-group group-id="EditorToggleActions" anchor="last"/>

            <action class="com.github.mitchellolsthoorn.testgenie.actions.GenerateTestsForClassAction"
                    id="TestGenie.Actions.GenerateTestsForClassAction"
                    text="Generate Tests for Class"
                    description="Generate tests for all methods in the selected class">
                <keyboard-shortcut first-keystroke="control alt shift G" second-keystroke="C" keymap="$default"/>
            </action>
        </group>
    </actions>

    <applicationListeners>
        <listener class="com.github.mitchellolsthoorn.testgenie.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
